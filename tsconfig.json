{
  "compilerOptions": {
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext", "dom"],
    "declaration": true,
    "rootDir": "./src",
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@types/*": ["@types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test"]
}
