{
  "compilerOptions": {
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "rootDir": "./src",
    "module": "ES2020",
    "target": "ES2020",
    "esModuleInterop": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    // "baseUrl": "./src",
    //"paths": {
      //"@types/*": ["@types/*"]
    //}
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test"]
}
